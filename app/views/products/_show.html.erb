<div class="d-flex card-product justify-content-between">
  <div class="card-product-infos">
    <h2><%= product.product_code %>-<%= product.name %> <%= number_to_currency(product.price) %></h2>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to '-', remove_item_path(@basket, product), method: :post, class: "btn btn-ghost" %>
    <%= link_to '+', add_item_path(@basket, product), method: :post, class: "btn btn-ghost" %>
  </div>

</div>